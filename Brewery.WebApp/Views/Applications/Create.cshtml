@model Domain.Entities.Order

@{
    ViewData["Title"] = "Создание заявки";
}

<h2>Создание заявки</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label>Наименование организации</label>
        <input asp-for="OrganizationName" class="form-control" />
    </div>

    <div class="form-group">
        <label>Ассортимент</label>
        <div id="items">
            <div class="item">
                <input name="Items[0].BeerName" class="form-control" placeholder="Название">
                <input name="Items[0].VolumeLiters" type="number" class="form-control" placeholder="Объём (л)">
                <input name="Items[0].KegCount" type="number" class="form-control" placeholder="Кеги">
            </div>
        </div>
        <button type="button" onclick="addItem()">Добавить строку</button>
    </div>

    <button type="submit" class="btn btn-primary">Отправить</button>
</form>

@section Scripts {
    <script>
        let index = 1;
        function addItem() {
            const div = document.createElement('div');
            div.className = 'item mt-2';
            div.innerHTML = `
                <input name="Items[${index}].BeerName" class="form-control mb-1" placeholder="Название">
                <input name="Items[${index}].VolumeLiters" type="number" class="form-control mb-1" placeholder="Объём (л)">
                <input name="Items[${index}].KegCount" type="number" class="form-control mb-1" placeholder="Кеги">
            `;
            document.getElementById('items').appendChild(div);
            index++;
        }
    </script>
}
